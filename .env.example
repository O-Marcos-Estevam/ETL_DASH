# ETL Dashboard - Environment Configuration
# Copy this file to .env and adjust values as needed
# IMPORTANT: Never commit .env to version control!

# ===================
# Backend Settings
# ===================

# Server host (0.0.0.0 for Docker, 127.0.0.1 for local only)
ETL_HOST=0.0.0.0

# Server port
ETL_PORT=4001

# Debug mode (true/false)
ETL_DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
ETL_LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
ETL_CORS_ORIGINS=http://localhost:4000,http://127.0.0.1:4000

# Execution timeout in seconds
ETL_TIMEOUT=3600

# Poll interval for job status (seconds)
ETL_POLL_INTERVAL=2.0

# ===================
# Frontend Settings
# ===================

# API URL (used during build)
VITE_API_URL=http://localhost:4001/api

# WebSocket URL
VITE_WS_URL=ws://localhost:4001

# ===================
# Security Settings (REQUIRED for production)
# ===================

# JWT Secret Key (CHANGE THIS! Generate with: python scripts/generate_key.py)
# IMPORTANT: Use a strong, unique key of at least 32 characters
JWT_SECRET_KEY=CHANGE_ME_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS

# Master encryption key for credentials (Generate with: python scripts/generate_key.py)
# IMPORTANT: If you lose this key, encrypted credentials cannot be recovered!
MASTER_KEY=CHANGE_ME_GENERATE_WITH_SCRIPTS_GENERATE_KEY_PY

# WebSocket authentication requirement (true/false)
# Set to true in production for security
AUTH_REQUIRED=true

# Rate limiting (requests per minute)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_DEFAULT=100

# ===================
# Optional Settings
# ===================

# Database path (relative to backend/)
# DATABASE_PATH=data/tasks.db

# Config path (relative to backend/)
# CONFIG_PATH=config/credentials.json

# Auth database path (relative to backend/)
# AUTH_DB_PATH=data/auth.db

# ===================
# PRODUCTION EXAMPLE (bolaoamericano.com.br)
# ===================
# Uncomment and adjust for production deployment:
#
# ETL_HOST=0.0.0.0
# ETL_PORT=4001
# ETL_DEBUG=false
# ETL_LOG_LEVEL=INFO
# ETL_CORS_ORIGINS=https://bolaoamericano.com.br,https://www.bolaoamericano.com.br
# VITE_API_URL=https://bolaoamericano.com.br/api
# VITE_WS_URL=wss://bolaoamericano.com.br/ws
# JWT_SECRET_KEY=<generate with: python scripts/generate_key.py>
# MASTER_KEY=<generate with: python scripts/generate_key.py>
# AUTH_REQUIRED=true
